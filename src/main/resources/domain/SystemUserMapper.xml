<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kevenpotter.student.dao.SystemUserDao">

    <!-- 根据[用户编号]或[用户名称]返回[后台用户实体类] -->
    <select id="getSystemUser" resultType="com.kevenpotter.student.domain.entity.SystemUserEntity">
        SELECT * FROM system_user su
        <where>
            <choose>
                <when test="userId != null and  userName != null">
                    su.user_id = #{userId} AND su.user_name = #{userName}
                </when>
                <when test="userId != null and userName == null">
                    su.user_id = #{userId}
                </when>
                <otherwise>
                    su.user_name = #{userName}
                </otherwise>
            </choose>
        </where>
    </select>

</mapper>